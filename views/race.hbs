<form action="" method="post">
    <div class="row mt-4">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    Racing
                </div>
                <div class="card-body" id="display-symbols-card">
                    <div class="row">
                        <div class="col">
                            <div class="card">
                                <div class="card-header">
                                    Race difficulty
                                </div>
                                <div class="card-body">
                                    <div class="btn-toolbar mb-3">
                                        {{#each model.parts}}
                                        <div class="input-group mr-2 col-2" data-race-part="{{@index}}">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">{{this.name}}</div>
                                                <input type="hidden" class="form-control" id="partName{{@index}}"
                                                    value="{{this.name}}">
                                            </div>
                                            <input type="text" class="form-control" id="partDifficulty{{@index}}"
                                                placeholder="Difficulty" value="{{this.difficulty}}">
                                            <input type="text" class="form-control" id="partDistance{{@index}}"
                                                placeholder="Distance" value="{{this.distance}}">
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row my-3" id="display-symbols-button-row">
                        <div class="col">
                            <div class="btn-toolbar">
                                <div class="btn-group mr-2">
                                    <button type="button" class="btn btn-outline-success" id="addSymbolsRow">
                                        Add racer
                                    </button>
                                </div>
                                <div class="btn-group mr-2">
                                    <button type="button" class="btn btn-outline-light" id="rollInit">
                                        Roll (init)
                                    </button>
                                    <button type="button" class="btn btn-outline-light" id="sortInit">
                                        Sort (init)
                                    </button>
                                </div>
                                <div class="btn-group mr-2">
                                    <button type="button" class="btn btn-outline-secondary" id="resetRace">
                                        Reset
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" id="saveRace">
                                        Save
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" id="loadRace">
                                        Load
                                    </button>
                                </div>
                                <div class="btn-group mr-2">
                                    <button type="button" class="btn btn-outline-secondary"
                                        id="resolveNegativesSymbols">
                                        {{!-- Resolve negatives symbols --}}
                                        Apply negatives
                                    </button>
                                </div>
                                <div class="btn-group mr-2">
                                    <button type="button" class="btn btn-outline-secondary" id="resetSymbols">
                                        Reset symbols
                                    </button>
                                </div>
                                <div class="input-group mr-2">
                                    <input type="text" class="form-control text-right border-light" value="Chased"
                                        id="chaseAllByTypeValue">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-light" type="button" id="chaseAllByType">
                                            Roll Chased
                                        </button>
                                        <button type="button" class="btn btn-outline-light" id="sortChase">
                                            Sort (chase)
                                        </button>
                                        <button type="button" class="btn btn-outline-light" id="displayChasers">
                                            Display chasers
                                        </button>
                                    </div>
                                </div>
                                <div class="input-group mr-2">
                                    <input type="text" class="form-control text-right border-primary" value="NPC"
                                        id="raceAllByTypeValue">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-primary" type="button" id="raceAllByType">
                                            Race all
                                        </button>
                                        <button type="button" class="btn btn-outline-primary" id="sortRace">
                                            Sort (race)
                                        </button>
                                        <button type="button" class="btn btn-outline-primary" id="displayRacers">
                                            Display racers
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" id="display-symbols-header-row">
                        <div class="col-3 col-racer">
                            Racer
                        </div>
                        <div class="col-5 col-vehicle">
                            Vehicle
                        </div>
                        <div class="col-3 col-symbols">
                            Symbols
                        </div>
                        <div class="col-1 col-actions">
                            Actions
                        </div>
                    </div>
                    <div class="row" id="display-symbols-header-row">
                        <div class="col-3 col-racer">
                            <div class="row">
                                <div class="col-6">Racer name</div>
                                <div class="col-3">Skill</div>
                                <div class="col-3">Type</div>
                            </div>
                        </div>
                        <div class="col-5 col-vehicle">
                            <div class="row">
                                <div class="col-2">Vehicle name</div>
                                <div class="col-1">Sil.</div>
                                <div class="col-2">Speed</div>
                                <div class="col-1">Han.</div>
                                <div class="col-2">S. Strain</div>
                                <div class="col-2">Hull t.</div>
                                <div class="col-2">Part | Lap</div>
                            </div>
                        </div>
                        <div class="col-3 col-symbols">
                            <div class="row">
                                <div class="col"><span title="Success symbol"
                                        class="genesys-symbol genesys-symbol-success"></span></div>
                                <div class="col"><span title="Advantage symbol"
                                        class="genesys-symbol genesys-symbol-advantage"></span>
                                </div>
                                <div class="col"><span title="Triumph symbol"
                                        class="genesys-symbol genesys-symbol-triumph"></span></div>
                                <div class="col"><span title="Failure symbol"
                                        class="genesys-symbol genesys-symbol-failure"></span></div>
                                <div class="col"><span title="Threat symbol"
                                        class="genesys-symbol genesys-symbol-threat"></span></div>
                                <div class="col"><span title="Despair symbol"
                                        class="genesys-symbol genesys-symbol-despair"></span></div>
                            </div>
                        </div>
                    </div>
                    {{#each model.racers}}
                    {{> racePilotRow index=@index }}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</form>