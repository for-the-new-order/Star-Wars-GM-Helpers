{
    "name": "star-wars-gm-helpers",
    "version": "1.0.0",
    "description": "A web UI to send batch Discord bot command",
    "main": "src/server.js",
    "scripts": {
        "build-backend": "tsc",
        "watch-backend": "tsc -w",
        "build-frontend": "browserify src/client.js > assets/js/public.js",
        "watch-frontend": "watchify src/client.js -o assets/js/public.js --debug --verbose",
        "start": "nodemon src/server.js",
        "build": "npm-run-all --parallel build-*",
        "watch": "npm-run-all --parallel watch-*",
        "run": "npm-run-all --parallel start watch"
    },
    "author": "Carl-Hugo Marcotte",
    "dependencies": {
        "@forevolve/bootstrap-dark": "^1.0.0-alpha.723",
        "discord.js": "^11.3.2",
        "express": "^4.16.3",
        "express-handlebars": "^3.1.0",
        "handlebars": "^4.1.2",
        "random-js": "^2.1.0"
    },
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^5.9.0",
        "@types/express": "^4.16.0",
        "@types/express-handlebars": "0.0.32",
        "@types/handlebars": "^4.1.0",
        "@types/jquery": "^3.3.30",
        "@types/node": "^10.5.8",
        "merge-config": "^2.0.0",
        "nodemon": "^1.19.1",
        "npm-run-all": "^4.1.5",
        "typemoq": "^2.1.0",
        "typescript": "^3.0.1",
        "watchify": "^3.11.1"
    }
}
